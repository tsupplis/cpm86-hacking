#!/bin/bash
root=`dirname $0`
cd "$root"
root=`pwd`
mkdir -p share/pcdev
cd share
if [ ! -d aztec34 ];then
    wget https://www.aztecmuseum.ca/az8634b.zip
    unzip -L az8634b.zip
    mv az8634b aztec34
fi
if [ ! -f pcdev/linkcmd.exe -o ! -f pcdev/rasm86.exe -o ! -f pcdev/linkexe.exe ]; then
    mkdir pcdev
    mkdir tools
    cd tools
    wget http://www.cpm.z80.de/download/tools86.zip
    unzip -L tools86.zip
    unzip -L dos86pr2.zip
    cp linkcmd.exe rasm86.exe ../pcdev
    cp linkexe.exe ../pcdev
    cd ..;rm -rf tools
fi
cd ..
if [ ! -d emu2 ];then
    git clone https://github.com/dmsc/emu2
fi
if [ ! -f bin/emu2 ];then
    (cd emu2;make;cp emu2 ../bin)
fi
